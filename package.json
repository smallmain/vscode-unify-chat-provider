{
  "name": "unify-chat-providers",
  "displayName": "Unify Chat Providers",
  "description": "Integrate multiple LLM API providers into VS Code's Language Model API.",
  "version": "0.0.1",
  "publisher": "example",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelChatProviders": [
      {
        "vendor": "unify-chat-providers",
        "displayName": "Unify Chat Providers",
        "managementCommand": "unifyChatProviders.manageProviders"
      }
    ],
    "commands": [
      {
        "command": "unifyChatProviders.addProvider",
        "title": "Unify Chat Providers: Add Provider"
      },
      {
        "command": "unifyChatProviders.removeProvider",
        "title": "Unify Chat Providers: Remove Provider"
      },
      {
        "command": "unifyChatProviders.manageProviders",
        "title": "Unify Chat Providers: Manage Providers"
      }
    ],
    "configuration": {
      "title": "Unify Chat Providers",
      "properties": {
        "unifyChatProviders.endpoints": {
          "type": "array",
          "description": "List of LLM API provider endpoints.",
          "items": {
            "type": "object",
            "required": [
              "name",
              "baseUrl",
              "models"
            ],
            "properties": {
              "type": {
                "type": "string",
                "description": "API format type. Determines how requests are formatted.",
                "enum": [
                  "anthropic"
                ],
                "enumDescriptions": [
                  "Anthropic Messages API format"
                ],
                "default": "anthropic"
              },
              "name": {
                "type": "string",
                "description": "Display name for this provider."
              },
              "baseUrl": {
                "type": "string",
                "description": "API endpoint URL (e.g., https://api.anthropic.com/v1/messages)."
              },
              "apiKey": {
                "type": "string",
                "description": "API key for authentication."
              },
              "models": {
                "type": "array",
                "description": "List of available models.",
                "items": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Model ID"
                    },
                    {
                      "type": "object",
                      "required": [
                        "id"
                      ],
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "Model ID (e.g., claude-sonnet-4-20250514)."
                        },
                        "name": {
                          "type": "string",
                          "description": "Display name for the model."
                        },
                        "maxInputTokens": {
                          "type": "number",
                          "description": "Maximum input tokens.",
                          "default": 200000
                        },
                        "maxOutputTokens": {
                          "type": "number",
                          "description": "Maximum output tokens.",
                          "default": 8192
                        }
                      }
                    }
                  ]
                },
                "minItems": 1
              },
              "defaultModel": {
                "type": "string",
                "description": "Default model ID for this provider."
              }
            }
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.3"
  }
}
