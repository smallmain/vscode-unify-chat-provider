{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "outDir": "out-tests",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
